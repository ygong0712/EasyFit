                android:layout_weight="1"
                android:gravity="center"
                android:checkable="true"
                android:text="Skiing" />


        </LinearLayout>

        <EditText
            android:id="@+id/egg"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:ems="10"
